# ================================================
# Discount Display Pro - Environment Variables
# ================================================

# --- Application (Core) ---
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_APP_URL=
NODE_ENV=development
PORT=3000

# --- Database ---
DATABASE_URL="file:dev.sqlite?connection_limit=1"

# --- Billing & Pricing ---
SHOPIFY_BILLING_USE_TEST=true
SHOPIFY_MANAGED_PRICING_HANDLE=discounts-display

# --- Storefront Authentication ---
# "true" = block unauthenticated requests, "false" = log but allow
# IMPORTANT: Set to "true" in production to enforce per-shop token auth
STOREFRONT_AUTH_ENFORCE=false

# --- Logging ---
# Levels: fatal, error, warn, info, debug, trace
LOG_LEVEL=debug
LOG_CATEGORIES=

# --- Support Widget ---
# HelpScout Beacon ID (omit to disable the widget entirely)
HELPSCOUT_BEACON_ID=166ce94f-c5fa-4de4-b0e2-d10d1763f0a7

# --- Development ---
SHOW_DASHBOARD_DEV_TOOLS=true
APP_BUILD_ENV=dev
FRONTEND_PORT=8002
HMR_SERVER_PORT=8002

# --- Build (Docker only) ---
SHOPIFY_CLI_PARTNERS_TOKEN=

# --- Backup (Litestream â†’ Cloudflare R2) ---
LITESTREAM_ACCESS_KEY_ID=
LITESTREAM_SECRET_ACCESS_KEY=

# --- E2E Testing ---
PLAYWRIGHT_SKIP_AUTH_SETUP=0
PLAYWRIGHT_STORAGE_STATE=playwright/.auth/shopify.json
SHOPIFY_LOGIN_EMAIL=
SHOPIFY_LOGIN_PASSWORD=
