{% comment %}
  Product Page / Product Form Styles
  Class prefix: .ddp-
{% endcomment %}

{% style %}
  /* Product Form Price and Badge Styles */
  .ddp-discounts .ddp-discounted-price-container {
    display: inline-flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: flex-start;
  }

  .ddp-discounts .ddp-discounted-price__regular {
    text-decoration: line-through;
    opacity: 0.7;
    font-size: {{ block.settings.price_font_size | default: 24 }}px;
  }

  .ddp-discounts .ddp-discounted-price__sale {
    font-weight: bold;
    color: {{ block.settings.discounted_price_color | default: shop.metafields.discount_app.discounted_price_color.value | default: '#199473' }};
    font-size: {{ block.settings.price_font_size | default: 24 }}px;
  }

  .ddp-discounts .ddp-discounted-price__badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: {{ block.settings.pp_badge_font_size | default: 14 }}px;
    font-weight: 600;
    white-space: nowrap;
  }

  .ddp-discounts .ddp-discounted-price__badge.automatic {
    background-color: {{ block.settings.pp_automatic_badge_bg_color | default: '#E9A417' }};
    color: {{ block.settings.pp_automatic_badge_text_color | default: '#ffffff' }};
  }

  .ddp-discounts .ddp-discounted-price__badge.coupon {
    background-color: {{ block.settings.pp_coupon_badge_bg_color | default: '#279ed9' }};
    color: {{ block.settings.pp_coupon_badge_text_color | default: '#ffffff' }};
  }

  /* Coupon Block Container */
  .ddp-discounts .ddp-coupon-block {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1rem;
    padding: 1rem;
    border: {{ block.settings.pp_coupon_border_thickness | default: 1 | at_least: 0 }}px solid {{ block.settings.pp_coupon_border_color | default: '#000000' }};
    border-radius: 4px;
  }

  .ddp-discounts .ddp-coupon-main-content {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 0.75rem;
  }

  /* Coupon Flag (pennant shape) */
  .ddp-discounts .ddp-coupon-flag {
    flex-shrink: 0;
    background-color: {{ block.settings.pp_coupon_badge_bg_color | default: '#279ed9' }};
    color: {{ block.settings.pp_coupon_badge_text_color | default: '#ffffff' }};
    padding: 0.5rem 1rem;
    font-weight: 600;
    font-size: {{ block.settings.pp_badge_font_size | default: 14 }}px;
    clip-path: polygon(0% 0%, 100% 0%, 90% 50%, 100% 100%, 0% 100%);
    min-width: 80px;
    text-align: center;
  }

  /* Coupon Label (checkbox + text) */
  .ddp-discounts .ddp-coupon-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: {{ block.settings.pp_badge_font_size | default: 14 }}px;
    font-weight: 500;
  }

  .ddp-discounts .ddp-coupon-label input[type="checkbox"] {
    width: 1.25rem;
    height: 1.25rem;
    cursor: pointer;
    accent-color: {{ block.settings.pp_coupon_badge_bg_color | default: '#279ed9' }};
  }

  .ddp-discounts .ddp-coupon-label.hidden {
    display: none;
  }

  /* Coupon Applied State */
  .ddp-discounts .ddp-coupon-applied {
    display: none;
    align-items: center;
    gap: 0.5rem;
    font-size: {{ block.settings.pp_badge_font_size | default: 14 }}px;
    font-weight: 600;
    color: {{ block.settings.pp_applied_text_color | default: '#199473' }};
  }

  .ddp-discounts .ddp-coupon-applied.visible {
    display: inline-flex;
  }

  .ddp-discounts .ddp-coupon-applied-icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }

  /* Terms Link */
  .ddp-discounts .ddp-terms-link {
    font-size: {{ block.settings.terms_link_font_size | default: 11 }}px;
    color: #666;
    text-decoration: underline;
    cursor: pointer;
    margin-top: 0.25rem;
  }

  .ddp-discounts .ddp-terms-link:hover {
    color: #333;
  }

  .ddp-discounts .ddp-terms-text {
    font-size: {{ block.settings.terms_link_font_size | default: 11 }}px;
    color: #666;
    white-space: pre-wrap;
    margin-top: 0.25rem;
  }

  /* Terms Modal */
  .ddp-terms-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    padding: 1rem;
  }

  .ddp-terms-modal-content {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    max-width: 500px;
    width: 100%;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .ddp-terms-modal-content h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .ddp-terms-modal-content p {
    white-space: pre-wrap;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .ddp-terms-modal-content button {
    padding: 0.5rem 1.5rem;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }

  .ddp-terms-modal-content button:hover {
    background-color: #333;
  }

  /* Main Container */
  .ddp-discounts.ddp-discounts-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Hidden State */
  .ddp-discounts .hidden {
    display: none !important;
  }

  /* Skeleton Loader */
  .ddp-discounts.ddp-discounts--loading {
    opacity: 0.6;
  }

  .ddp-skeleton-loader {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .ddp-skeleton-line {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: ddp-skeleton-pulse 1.5s ease-in-out infinite;
    border-radius: 4px;
    height: 1rem;
  }

  .ddp-skeleton-line--price {
    width: 120px;
    height: {{ block.settings.price_font_size | default: 24 }}px;
  }

  .ddp-skeleton-line--lg {
    width: 100%;
    height: 1.5rem;
  }

  .ddp-skeleton-line--md {
    width: 75%;
    height: 1rem;
  }

  .ddp-skeleton-line--sm {
    width: 50%;
    height: 0.75rem;
  }

  @keyframes ddp-skeleton-pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.55;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .ddp-discounts .ddp-coupon-block {
      padding: 0.75rem;
    }

    .ddp-discounts .ddp-coupon-flag {
      min-width: 60px;
      padding: 0.4rem 0.75rem;
    }

    .ddp-terms-modal-content {
      padding: 1.5rem;
    }
  }
{% endstyle %}
